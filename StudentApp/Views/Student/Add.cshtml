@model StudentApp.Models.AddStudentViewModel


<h2> Add Student</h2>

<form method="post">
	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control"  asp-for="Name"/>
	</div>

	<div class="mt-3">
		<label class="form-label">Email</label>
		<input type="email" class="form-control" asp-for="Email"/>
	</div>

	<div class="mt-3">
		<label class="form-label">Phone</label>
		<input type="text" class="form-control" asp-for="Phone"/>
	</div>

	<div class="mt-3">
		<input type="checkbox" class="form-check-input" id="Subsribe" asp-for="Subscribe" />
		<label class="form-check-label" for="Subscribe">Subscribe</label>
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>
